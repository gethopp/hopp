# Hopp Backend Configuration Example
# Copy this file to .env.local or set environment variables

# Server Configuration
SERVER_PORT=1926
SERVER_HOST=localhost
DEPLOY_DOMAIN=localhost:1926
USE_TLS=false
ENABLE_DEBUG_ENDPOINTS=false

# Authentication
SESSION_SECRET=your-session-secret-here
GOOGLE_KEY=your-google-oauth-key
GOOGLE_SECRET=your-google-oauth-secret
SLACK_KEY=your-slack-app-key
SLACK_SECRET=your-slack-app-secret

# Database
DATABASE_DSN=postgres://user:password@localhost/hopp_db?sslmode=disable
REDIS_URI=redis://localhost:6379

# LiveKit (for video calls)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_SERVER_URL=wss://your-livekit-server

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_DEFAULT_SENDER=noreply@gethopp.app

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn

# Email Validation Configuration
# Block disposable email addresses during registration (default: true)
BLOCK_DISPOSABLE_EMAILS=true

# Strict mode: only allow business domains (default: false)
# When enabled, personal domains like Gmail, Yahoo, etc. will be blocked
EMAIL_STRICT_MODE=false
